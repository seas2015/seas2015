<p id="notice"><%= notice %></p>

<h1>Listing Equipment</h1>
Keyword = <%= params[:keyword] %><br>
QR = <%= @qr1 %>
QRZBar = <%= @qr2 %>

<table border="1" width="100%" style="font-size:12px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Buy date</th>
      <th>Brand</th>
      <th>Note</th>
      <th>Exp</th>
      <th>Status</th>
      <th>Serial</th>
      <th>Price (Baht)</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.equip_id %></td>
        <td><%= equipment.buy_date %></td>
        <td><%= equipment.brand %></td>
        <td><%= equipment.note %></td>
        <td><%= equipment.exp %></td>
        <td><%= equipment.status %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.price %></td>

    <% end %>
  </tbody>
</table>

<br>

