
<p id="notice"><%= notice %></p>

<h1>Listing Equipment</h1>

<table border="1" width="100%" style="font-size:12px;background-color:white;" class="table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Id</th>
    <th>Buy date</th>
    <th>Brand</th>
    <th>Note</th>
    <th>Expire date</th>
    <th>Status</th>
    <th>Serial</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.equip_id %></td>
        <td><%= equipment.buy_date %></td>
        <td><%= equipment.brand %></td>
        <td><%= equipment.note %></td>
        <td><%= equipment.exp %></td>
        <td><%= equipment.status %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.price %></td>
        <td><%= link_to 'Show', equipment_item_path(:equip_id => equipment.equip_id) %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

