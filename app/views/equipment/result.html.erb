
<p id="notice"><%= notice %></p>

<h3>Listing Equipment</h3>
<div align="right">
<%= select_tag "group_action", options_for_select(["--Select action--","Request all","Export to PDF","Export to excel","Add to cart"]) %>
</div><br>
<table border="1" width="100%" style="font-size:12px;background-color:white;" class="table-hover">
  <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Id</th>
    <th>Brand</th>
    <th>Note</th>
    <th>Expire date</th>
    <th>Campus</th>
    <th>Status</th>
    <th>Serial</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @equipment.each do |equipment| %>
      <tr>
        <td>&nbsp<%= check_box_tag 'seleced'%></td>
        <td><%= equipment.name %></td>
        <td><%= equipment.equip_id %></td>
        <td><%= equipment.brand %></td>
        <td><%= equipment.note %></td>
        <td><%= equipment.exp %></td>
        <td><%= equipment.campus %></td>
        <td><%= equipment.status %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.price %></td>
        <td><%= link_to 'Detail', equipment_item_path(:equip_id => equipment.equip_id) %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<div align="right">
  <%= button_to 'Add to cart' , '#'%>
</div>